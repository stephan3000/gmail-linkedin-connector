{
    "manifest_version": 3,
    "name": "Gmail Toolbar LinkedIn Connector",
    "version": "0.1",
    "description": "Show LinkedIn profiles for email participants in the toolbar popup.",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://mail.google.com/*",
        "https://www.linkedin.com/*"
    ],
    "background": {
        "service_worker": "src/background/service_worker.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://mail.google.com/*"
            ],
            "js": [
                "src/content/gmail.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_popup": "src/popup/popup.html",
        "default_title": "Find on LinkedIn"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}